# Step 1: Use the specified Node.js runtime as the parent image
FROM node:22.4.0

# Step 2: Set the working directory to /app
WORKDIR /app

# Step 3: Install build tools needed for native modules
RUN apt-get update && apt-get install -y build-essential python3

# Step 4: Copy package.json and package-lock.json into the working directory
COPY package*.json ./

# Step 5: Force building native modules from source (including optional dependencies)
ENV npm_config_build_from_source=true

# Step 6: Install dependencies using the lock file
RUN npm ci

# Step 7: Copy the rest of the project into the working directory
COPY . .

# Step 8: Build the project
RUN npm run build

# Step 9: Expose the desired port for your app
EXPOSE 3000

# Step 10: Copy and prepare the custom start script
COPY start.sh /app
RUN chmod +x /app/start-staging.sh

# Step 11: Start the app using the custom script
CMD ["/app/start-staging-cr.sh"]
